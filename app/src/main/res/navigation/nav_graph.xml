<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.probefragmente.startFragment.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_startFragment_to_composeNavHostFragment"
            app:destination="@id/composeNavHostFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.probefragmente.secondFragment.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/fragment_second"/>
    <fragment
        android:id="@+id/composeNavHostFragment"
        android:name="com.example.probefragmente.composeNavHostFragment.ComposeNavHostFragment"
        android:label="ComposeNavHostFragment" />
</navigation>